extends layout

block content
  div.top
    div#container(style="min-width: 500px; height: 500px; margin: 0 auto")
      script.
        var arrToMultiArr = function(arr){
          var result = new Array();
          for (var i=0; i < arr.length; i+=2){
            var date = arr[i]
            var count = arr[i + 1]
            result.push([date, count])
          }
          return result
        };
        var hflux = arrToMultiArr([#{seriesData}])

        $(function () {
          $('#container').highcharts({
            title: {
              text: 'Monthly Average Temperature',
              x: -20 //center
            },
            subtitle: {
              text: 'Source: WorldClimate.com',
              x: -20
            },
            xAxis: {
              categories: ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun',
                  'Jul', 'Aug', 'Sep', 'Oct', 'Nov', 'Dec']
            },
            yAxis: {
              title: {
                  text: 'Temperature (°C)'
              },
              plotLines: [{
                  value: 0,
                  width: 1,
                  color: '#808080'
              }]
            },
            tooltip: {
              valueSuffix: '°C'
            },
            legend: {
              layout: 'vertical',
              align: 'right',
              verticalAlign: 'middle',
              borderWidth: 0
            },
            series: [{
              name: 'Mlx906',
              data: hflux
            }, {
              name: 'New York',
              data: [-0.2, 0.8, 5.7, 11.3, 17.0, 22.0, 24.8, 24.1, 20.1, 14.1, 8.6, 2.5]
            }, {
              name: 'Berlin',
              data: [-0.9, 0.6, 3.5, 8.4, 13.5, 17.0, 18.6, 17.9, 14.3, 9.0, 3.9, 1.0]
            }, {
              name: 'London',
              data: [3.9, 4.2, 5.7, 8.5, 11.9, 15.2, 17.0, 16.6, 14.2, 10.3, 6.6, 4.8]
            }]
          });
        });
  
    label Download
    div.container
      div.content
        form(method="post", action="download", id="downloadForm")
          div.row      
            div.col-md-5
              div.form-group
                label From:
                div.input-group.date(data-provide="datepicker")
                  input.form-control(type="text", id="fromdate", name="Fromdate", placeholder="from")
                  div.input-group-addon
                      span.glyphicon.glyphicon-th
            div.col-md-5
              div.form-group
                label To:
                div.input-group.date(data-provide="datepicker")
                  input.form-control(type="text", id="todate", name="Todate", placeholder="to")
                  div.input-group-addon
                      span.glyphicon.glyphicon-th   
          div.row
            div.col-md-5
              div.form-group
                label Sensor:
                select.selectpicker(multiple, id="sensor", name="Senor")
                  option Bmp180                  
                  option Hflux
                  option Cavity Temp
                  option Mlx906                  
                  option Sht15
                  option Sdp610
            div.col-md-5
              div.form-group
                label Format:
                select.selectpicker(id="format", name="Format")
                  option csv                  
                  option xml
          div.row
            div.col-md-4
              div.form-group 
                input.btn(type="submit", value="download" class="btn btn-default") 